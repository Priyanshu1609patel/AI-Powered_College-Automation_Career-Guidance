@startuml
title DFD Level 1 - Career Guidance AI System
skinparam defaultFontName Arial
skinparam defaultFontSize 14

' Style for external entities
skinparam rectangle {
  BackgroundColor #90EE90
  FontColor black
  BorderColor #228B22
  BorderThickness 2
}
' Style for processes (circle)
skinparam circle {
  BackgroundColor #00FF00
  FontColor black
  BorderColor #008000
  BorderThickness 3
  FontSize 16
}
' Style for data stores
skinparam database {
  BackgroundColor #F5FFFA
  FontColor black
  BorderColor #006400
  BorderThickness 2
}

' --- Node Declarations (Ordered for layout) ---
rectangle "Admin" as Admin
circle "Admin\nMgmt" as AdminMgmt
rectangle "Job Seeker" as JobSeeker
circle "Resume\nAnalysis" as ResumeAnalysis
circle "Quiz\nProcessing" as QuizProcessing
circle "Career\nRecommendation\nEngine" as CareerEngine
database "Career/Job DB" as CareerDB
database "Resume DB" as ResumeDB
database "Quiz DB" as QuizDB

' --- Layout Helper (Invisible) ---
AdminMgmt -[hidden]-> JobSeeker
ResumeAnalysis -[hidden]-> QuizProcessing
CareerEngine -[hidden]-> CareerDB

' --- Flows: ADMIN ---
Admin -right-> AdminMgmt : Manage\nUsers\nUpdate Career/Job Data\nRequest Analytics
AdminMgmt -left-> Admin : Reports\nDashboards
AdminMgmt -down-> CareerDB : Update Data

' --- Flows: JOB SEEKER & PROCESSES ---
JobSeeker -down-> ResumeAnalysis : Upload Resume
ResumeAnalysis -up-> JobSeeker : Analysis Result
ResumeAnalysis -right-> ResumeDB : Store/Fetch

JobSeeker -down-> QuizProcessing : Take Quiz
QuizProcessing -up-> JobSeeker : Quiz Report
QuizProcessing -right-> QuizDB : Store/Fetch

JobSeeker -down-> CareerEngine : Request Career Guidance
CareerEngine -up-> JobSeeker : Recommendations
CareerEngine -right-> CareerDB : Fetch Data

@enduml
